<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <CommerceToolsCoreContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Umbraco.Cms.Integrations.Commerce.CommerceTools\**\*.*</CommerceToolsCoreContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyCommerceToolsAssets" BeforeTargets="Build">
        <ItemGroup>
            <CommerceToolsCoreContentFiles Include="$(CommerceToolsCoreContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying CommerceTools files: $(CommerceToolsCoreContentFilesPath) - #@(CommerceToolsCoreContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(CommerceToolsCoreContentFiles)"
            DestinationFiles="@(CommerceToolsCoreContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\UmbracoCms.Integrations\Commerce\CommerceTools\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearCommerceToolsAssets" BeforeTargets="Clean">
        <ItemGroup>
            <CommerceToolsDir Include="$(MSBuildProjectDirectory)\App_Plugins\UmbracoCms.Integrations\Commerce\CommerceTools\" />
        </ItemGroup>
        <Message Text="Clear old CommerceTools data"  Importance="high" />
        <RemoveDir Directories="@(CommerceToolsCoreDir)"  />
    </Target>

</Project>
