<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Umbraco.Cms.Integrations.Commerce.CommerceTools.Core\**\*.*</Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyUmbraco.Cms.Integrations.Commerce.CommerceTools.CoreAssets" BeforeTargets="Build">
        <ItemGroup>
            <Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFiles Include="$(Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Umbraco.Cms.Integrations.Commerce.CommerceTools.Core files: $(Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFilesPath) - #@(Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFiles)"
            DestinationFiles="@(Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Umbraco.Cms.Integrations.Commerce.CommerceTools.Core\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearUmbraco.Cms.Integrations.Commerce.CommerceTools.CoreAssets" BeforeTargets="Clean">
        <ItemGroup>
            <Umbraco.Cms.Integrations.Commerce.CommerceTools.CoreDir Include="$(MSBuildProjectDirectory)\App_Plugins\Umbraco.Cms.Integrations.Commerce.CommerceTools.Core\" />
        </ItemGroup>
        <Message Text="Clear old Umbraco.Cms.Integrations.Commerce.CommerceTools.Core data"  Importance="high" />
        <RemoveDir Directories="@(Umbraco.Cms.Integrations.Commerce.CommerceToolsCoreDir)"  />
    </Target>

</Project>
